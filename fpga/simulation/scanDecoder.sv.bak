

module scanDecoder(
	input logic [7:0] key,
	output logic [3:0] keyDecoded);
// takes in dipswitch as 4 digit binary value and 
// outputs hexidecimal value on seven segment display

always_comb
	begin
		case (sy) 
			8'b0000_0000 : keyDecoded = 4'h0;
			8'b0000_0000 : keyDecoded = 4'h1;
			8'b0000_0010 : keyDecoded = 4'h2;
			8'b0000_0000 : keyDecoded = 4'h3;
			8'b0000_0000 : keyDecoded = 4'h4;
			8'b0000_0000 : keyDecoded = 4'h5;
			8'b0000_0000 : keyDecoded = 4'h6;
			8'b0000_0000 : keyDecoded = 4'h7;
			8'b0000_0000 : keyDecoded = 4'h8;
			8'b0000_0000 : keyDecoded = 4'h9;
			8'b0000_0000 : keyDecoded = 4'ha;
			8'b0000_0000 : keyDecoded = 4'hb;
			8'b0000_0000 : keyDecoded = 4'hc;
			8'b0000_0000 : keyDecoded = 4'hd;
			8'b0000_0000 : keyDecoded = 4'he;
			8'b0000_0000 : keyDecoded = 4'hf;
			default: segOut = 7'b1111111;
		endcase
	end
endmodule